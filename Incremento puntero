    Incremento de un apuntador
----------------------------------*/

#include <iostream>

using namespace std;
int main()
{
    int valor = 3;
    int *ptr;
    
 
 cout<<"\tINCREMENTO DE APUNTADORES"<<endl<<endl;
 
    ptr = &valor; 
 
    for(int i=0; i< 5; i++)
    {
        cout<<*(ptr)<<endl; 
        cout<<"Posicion: "<<int(*ptr+i)<<endl;
	}
   
   return 0;
}
