#include<stdio.h>
#include<conio.h>

int main()
{
    int i,x;
    long fact;
    char resp;  
        
        printf("ESTE PROGRAMA CALCULA EL FACTORIAL DE UN NUMERO\n");
        do
    {
    	fact= 1;
        printf("\nIntroduce un numero: ");
        scanf("%d",&x);
        for(i=x; i>1; i--)
            fact = fact *i;
        printf("El factorial de %d = %1d\n",x,fact);
        printf("\nDeseas realizar otro calculo? S/N: ");
        scanf("%s",&resp);
    }
    while((resp == 'S')||(resp == 's'));
    
    return 0;
}
