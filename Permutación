#include <algorithm>
#include <iostream>
 
using namespace std;
 
int main()
{
	char opc;
  std::string cadena ;
  
  cout<<"PERMUTACION DE CADENAS";cout<<endl;
  cout<<endl;
  do{  
  	cout<<"Ingresa una cadena: ";
	  cin>>cadena;cout<<endl; 
  do
  {
    std::cout << cadena << std::endl;
  } while ( std::next_permutation( cadena.begin( ), cadena.end( ) ) );
  cout<<endl;
  cout<<"Deseas ingresar otra cadena S/N: ";cin>>opc;cout<<endl;
}
while((opc == 'S')||(opc == 's'));
}
